# Linux-specific bash settings
# 
# source common settings
. ~/etc/bash/bashrc_common

#color support of ls
if [ "$TERM" != "dumb" ] && [ -x /usr/bin/dircolors ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto -Bp'
    alias dir='dir --color=auto -p'
fi

alias open='gnome-open'
alias lss='ls --ignore=*.o'
alias lsd='ls --group-directories-first' #works on ubuntu
