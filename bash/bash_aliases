# Common alias definitions.
alias ll='ls -hl'
alias la='ls -A'
alias lal='ll -A'

alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias root='cd `hg root`'

alias grep="grep --color=auto"
alias isodate='date +%F'
alias isodatetime='date +%F-%H%M'
alias bc='bc -l'
alias diff='diff -u'
alias scr='screen -DR'
alias df='df -H'
alias du='du -h'

# recursive mkdir and cd if successful
function mkcd {
	mkdir -p "$@" && builtin cd "$@"
}

# cd and ls
function cl {
	cd "$@" && ls 
}
