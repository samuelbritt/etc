# Alias definitions

# Platform and machine specific aliases
if [ `uname` = "Linux" ] ; then
	alias open='gnome-open'
	alias lss='ls --ignore=*.o'
	alias lsd='ls --group-directories-first' #works on ubuntu
fi 
if [ `uname` = "Darwin" ] ; then
	alias gvim="mvim"
	alias gvimdiff="mvim -d"
	alias mvimdiff="mvim -d"
	alias lss="ls *.cpp *.h"
	alias ls="ls -p"
	alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
	alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"
fi
if [ `uname -n` = "titanium" ] ; then
	alias abaqus='XLIB_SKIP_ARGB_VISUALS=1 abaqus'
	alias abq671='XLIB_SKIP_ARGB_VISUALS=1 abq671'
	alias abq681='XLIB_SKIP_ARGB_VISUALS=1 abq681'
	alias cae='abaqus cae&'
fi

# Common alias definitions.
alias ll='ls -hl'
alias la='ls -A'
alias lal='ll -A'

alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias root='cd `hg root`'

alias grep="grep --color=auto"
alias isodate='date +%F'
alias isodatetime='date +%F-%H%M'
alias bc='bc -l'
alias diff='diff -u'
alias scr='screen -DR'
alias df='df -H'
alias du='du -h'

# recursive mkdir and cd if successful
function mkcd {
	mkdir -p "$@" && builtin cd "$@"
}

# cd and ls
function cl {
	cd "$@" && ls 
}
