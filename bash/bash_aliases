# Alias definitions

# Platform and machine specific aliases
if [ `uname` = "Linux" ] ; then
	alias open='gnome-open'
	alias lss='ls --ignore=*.o'
	alias lsd='ls --group-directories-first' #works on ubuntu
	alias abaqus='XLIB_SKIP_ARGB_VISUALS=1 abaqus'
	alias cae='abaqus cae&'
	alias matcl='matlab -nosplash -nodesktop'

	# Edit file in new terminal window
	function tvim {
		gnome-terminal -x vim $@ &
	}
elif [ `uname` = "Darwin" ] ; then
	alias gvim="mvim"
	alias gvimdiff="mvim -d"
	alias mvimdiff="mvim -d"
	alias ls="ls -p"
	alias lss="ls *.cpp *.h"
	alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
	alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"
fi

if [ $HOSTNAME = "hydrogen.site" ]
then
	alias open='kde-open'
fi


# Common alias definitions.
alias ll='ls -hl'
alias la='ls -A'
alias lal='ll -A'

alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../..'
alias root='cd `hg root`'

alias grep="grep --color=auto"
alias today='date +%F'
alias now='date +%F-%H%M'
alias bc='bc -l'
alias scr='screen -DR'
alias df='df -H'
alias du='du -h'
alias diff='colordiff -u'
alias pylab='ipython -pylab'

# recursive mkdir and cd if successful
function mkcd {
	mkdir -p "$@" && builtin cd "$@"
}

# cd and ls
function cl {
	cd "$@" && ls
}

if [ ${HOSTNAME:0:9} = "moleculos" ] ; then
	unalias diff
fi
