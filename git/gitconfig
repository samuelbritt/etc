[alias]
	ci = commit
	cim = commit -m
	cam = commit -am
	st = status --short --branch
	co = checkout
	br = branch
	fe = fetch
	ds = diff --staged
	df = diff --name-only master...
	l  = log --oneline --graph --decorate --all -25
	ll = log --oneline --graph --decorate --all
	arch = "!f() { git archive HEAD --prefix=\"$1/\" | gzip > \"$1\".tar.gz; }; f"
	root = rev-parse --show-toplevel
