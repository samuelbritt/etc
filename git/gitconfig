[user]
	name = Samuel Britt
	email = samuelbritt@gmail.com
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[helper]
	credential = wincred
[alias]
	ci = commit
	cam = commit -am
	st = status --short --branch
	co = checkout
	br = branch
	fe = fetch
	diffs = diff --staged
	glog = log --oneline --graph --decorate
	last = !git --no-pager glog -15
	gloga = !git glog --all
	lasta = !git last --all
	arch = "!f() { git archive HEAD --prefix=\"$1/\" | gzip > \"$1\".tar.gz; }; f"
	root = rev-parse --show-toplevel
